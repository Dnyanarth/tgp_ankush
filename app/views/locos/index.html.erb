<h1>Listing locos</h1>
<div><%= link_to 'New Loco', new_loco_path ,:class => "button round blue image-right ic-add text-upper" ,:style=> "float:right;margin-top:20px;"%></div>

<table border='1'>
  <tr>
    <th>Loco Pilot</th>
    <th>Train No</th>
    <th>Base</th>
    <th>Train</th>
    <th>Traintype</th>
    <th>Load</th>
    <th>Section</th>
    <th>Kms</th>
    <th>Departure</th>
    <th>Arrival</th>
    <th>Coast</th>
    <th>Total Kms</th>
    <th>Hault</th>
    <th>Hault hrs</th>
    <th>Kwh run</th>
    <th>Kwh halt</th>
    <th>Kwh gen</th>
    <th>Kwh ration</th>
    <th colspan='3'>Action</th>
    
  </tr>

<% @locos.each do |loco| %>
  <tr>
    <td><%= loco.crew_id %></td>
    <td><%= loco.Locono %></td>
    <td><%= loco.Base %></td>
    <td><%= loco.Train %></td>
    <td><%= loco.Traintype %></td>
    <td><%= loco.Load %></td>
    <td><%= loco.Section %></td>
    <td><%= loco.KMS %></td>
    <td><%= loco.Dep %></td>
    <td><%= loco.Arr %></td>
    <td><%= loco.Coast %></td>
    <td><%= loco.Coasthrs %></td>
    <td><%= loco.Hault %></td>
    <td><%= loco.HaultHrs %></td>
    <td><%= loco.kwhrun %></td>
    <td><%= loco.Kwhhalt %></td>
    <td><%= loco.Kwhgen %></td>
    <td><%= loco.Kwhration %></td>
    <td><%= link_to 'Show', loco %></td>
    <td><%= link_to '', edit_loco_path(loco),:class => "table-actions-button ic-table-edit" %></td>
    <td><a href="/locos/<%= loco.id %>/delete" onclick="if(confirm('Are you sure you want to delete this loco?'))  return true;  else  return  false;" class="table-actions-button ic-table-delete" ></a></td>
  </tr>
<% end %>
</table>

<br />





